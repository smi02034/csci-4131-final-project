mixin head(title)
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title= title
        link(rel="stylesheet", type="text/css", href="/css/main.css")
        // Tutorial for using icons from w3schools. https://www.w3schools.com/css/css_icons.asp
        // Credit to Google for the icons libraries.
        link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0")

mixin header(link, text)
    div#header
        a(id="title", href="/") Tea Hall
        a(id="signin" class="bluelink" href=link) #{text}

mixin general_info
    h3 About
    div
        p. 
            Tea Hall is a microblogging website where residents of on-campus residence halls at the University of 
            Minnesota can post about happenings around their hall in 417 characters or less. The site intends to foster 
            a welcoming and non-judgemental community among hall residents.
        p.
            To create, like, edit, and delete posts, please sign in.

mixin user_info
    div#user_info
        h3 #{user.username}
        p 
            span #{user_post_data.post_count}
            if user_post_data.post_count == 1
                |  post
            else
                |  posts
        button#new_post.action New Post
    div#post_edit 
        h3 New Post
        p.signin_error Your post is not 417 characters or less, please try again.
        div
            //- I did not set maxlength because I did not want users to be unable 
            //- to type if they were over the limit. Instead I opted to have the user 
            //- warned on the front end.
            textarea(placeholder="What's on your mind...") 
            button(id="create_post" class="action") Create Post
    
    